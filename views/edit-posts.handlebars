{{!-- <link rel="stylesheet" href="/stylesheets/edit-posts.css" /> --}}
   <div class="row m-0">
      <div class="container-fluid col-sm-12 col-md-6">
         <div class="row">
            <div class="card text-center">
               <div class="card-header">
                  <h2>Edit Post</h2>
               </div>
               <div class="card-body center">
                  <form class="new-post-form">
                     {{!-- title --}}
                     <div class="row center">
                        <label for="post-title" class="pretty-label form-label">Title:</label>
                        <input type="text" id="post-title" name="post-title" class="form-control w-100" />
                     </div>

                     {{!-- file upload --}}
                     <div class="row center">
                        <label for="file-button" class="pretty-label">Product Image:</label>
                        <img class="w-100 mb-3" id="create-image">
                        <progress value="0" max="100" class="w-100" id="uploader">0%</progress>
                        <input type="file" value="upload" class="p-1 form-control w-100" id="file-button" />
                     </div>

                     {{!-- description --}}
                     <div class="row center">
                        <label for="post-text" class="pretty-label">Product Description:</label>
                        <textarea class="form-control w-100" id="post-text" name="post-text"></textarea>
                     </div>

                     {{!-- price --}}
                     <div class="row center">
                        <label for="post-price" class="pretty-label">Product Price:</label>
                        <input type="number" class="form-control w-100" id="post-price" name="post-price" min="0"
                           value="0.00" step="01" />
                     </div>

                     {{!-- category --}}
                     <div class="row center pb-0">
                        <label for="post-category" class="pretty-label">Category:</label>
                     </div>
                     <div class="row pt-0">
                        {{#each categories as |category|}}
                        <div class="col-sm-1 col-md-4">

                           <input type="radio" id="category-{{category.id}}" class="post-category" name="post-category"
                              value={{category.id}}>
                           <label for="category-{{category.id}}">{{category.category_name}}</label>
                        </div>
                        {{/each}}

                     </div>

                     <button type="submit" id="post-create" class="pretty-btn mb-4">Create</button>
                  </form>
               </div>
            </div>
         </div>
      </div>

      <div class="container-fluid col-sm-12 col-md-6">
         <div class="row">
            <div class="card text-center">
               <div class="card-header">
                 <h2>Preview Post</h2>
               </div>
               <div class="card  mb-3">
                  <img src="https://via.placeholder.com/600x300.png?text=Visit+testURL.com" class="card-img-top" height="525" width="500" alt="Image preview">
                  <div class="card-body">
                     <h5 class="card-title" id="preview-title">Post Title Example</h5>
                     <p class="card-text" id="preview-desc">This is the description for your product's post. As you
                        write information in the text area above, it will fill in here.</p>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>