{{#if loggedIn}}
<form class="chat-form">

    <div>
        {{post.title}}
    </div>    
    <div id="recipient" value={{post.user.id}}>
        {{post.user.username}}
    </div>
    <div>
        <textarea name="chat-body" id="chat-text"></textarea>
    </div>

    <div>
        <button type="submit" class="pretty-btn">Direct Message</button>
    </div>
</form>

    <div>
        {{chat.chat_text}}
    </div>

{{/if}}

{{#unless loggedIn}}
<p>You must be logged in to direct message.</p>
{{/unless}}