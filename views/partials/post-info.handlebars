{{#if posts}}
<div class="card-container">
    <div class="row card-row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4">
        {{#each posts}}
        <div class="col">
            <a class="card-link" href="/post/{{id}}">
                <div class="card rounded mt-2 mb-3 bg-light">
                    <img src="{{image_url}}" class="rounded-top">
                    <div class="card-body rounded bg-light">
                        <h5 class="card-title">${{price}}</h5>
                        <p class="card-text">
                            {{title}} in {{category.category_name}}   
                        </p>
                        <div class="card-footer bg-light">
                            <small class="text-muted">
                                Posted by {{user.username}}
                                <br>
                                Created on {{format_date created_at}}</small>
                        </div>
                    </div>
                </div>  
            </a>
        </div>
        {{/each}}
    </div>
</div>
{{/if}}

{{#unless posts}}
<div class="card bg-light">
    <img src="/images/oops.jpg" class="card-img-top">
    <div class="card-body bg-light">
        <h5 class="card-title">Oops!</h5>
        <p class="card-text">
            No listings found!
        </p>
    </div>
</div>  
{{/unless}}